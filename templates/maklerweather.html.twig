{#
/**
 * @file
 * Template for the Makler Weather Widget block.
 *
 * Available variables:
 * - maklerweather_detail: array of weather list.
 * - maklerweather_detail.name: city name.
 * - maklerweather_detail.icon: wather icon.
 * - maklerweather_detail.temp: current themperature.
 * - maklerweather_detail.description: human readibly wether description.
 */
#}

<div class="makler-weather-container">

  <div class="box">
    <div class="wave -one">&nbsp;</div>
    <div class="wave -two">&nbsp;</div>
    <div class="wave -two">&nbsp;</div>
    <div class="wave -two">&nbsp;</div>
    <div class="wave -three">&nbsp;</div>

    <div class="info">

      <div class="weather-wrapper">

        {% if (maklerweather_detail.icon) %}
          <div class="weather-icon">
            <img src="https://openweathermap.org/img/w/{{ maklerweather_detail.icon }}.png"
                 alt="Wetter in {{ maklerweather_detail.name }}"/>
          </div>
        {% endif %}

        {% if (maklerweather_detail.temp) %}
          <div class="temp">
            <span class="temp-value">{{ maklerweather_detail.temp }}</span>
            <span class="temp-units">Â°C</span>
          </div>
        {% endif %}

      </div>

      {% if (maklerweather_detail.description) %}
        <div class="description">
          <p>{{ maklerweather_detail.description }}</p>
        </div>
      {% endif %}

    </div>
  </div>

  <div class="makler-weather-footer">
    {% trans %}
      Current weather<br>in {{ maklerweather_detail.name }}
    {% endtrans %}
  </div>

</div>
