{#
/**
 * @file
 * Template for the Maklerweather block for current weather.
 * Available variables:
 * - maklerweather_detail: array of weather list.
 */
#}

<div class="makler-weather-container">


  <div class="box">
    {#    <div class="wave -one">&nbsp;</div>#}
    {#    <div class="wave -two">&nbsp;</div>#}
    {#    <div class="wave -three">&nbsp;</div>#}

    <div class="info">

      <div class="weather-wrapper">
        {% if (maklerweather_detail.icon) %}
          <div class="weather-icon">
            <img src="https://openweathermap.org/img/w/{{ maklerweather_detail.icon }}.png" alt=""/>
          </div>
        {% endif %}

        {% if (maklerweather_detail.temp) %}
          <div class="temp">
            <span class="temp-value">{{ maklerweather_detail.temp }}</span><span class="temp-units">Â°C</span>
          </div>
        {% endif %}

      </div>
      {% if (maklerweather_detail.description) %}
        <div class="description">
          <p>{{ maklerweather_detail.description }}</p>
        </div>
      {% endif %}
    </div>
  </div>
</div>
